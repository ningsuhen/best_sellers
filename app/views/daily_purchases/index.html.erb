<h1>Listing daily_purchases</h1>

<table>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_purchases.each do |daily_purchase| %>
      <tr>
        <td><%= daily_purchase.listing %></td>
        <td><%= daily_purchase.day %></td>
        <td><%= link_to 'Show', daily_purchase %></td>
        <td><%= link_to 'Edit', edit_daily_purchase_path(daily_purchase) %></td>
        <td><%= link_to 'Destroy', daily_purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily purchase', new_daily_purchase_path %>
